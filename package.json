{
  "name": "sanskriti-setu",
  "version": "1.0.0",
  "description": "Cultural Exchange Platform for SIH 2024",
  "main": "server/server.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/server.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "build:server": "echo 'No build step needed for server'",
    "install-client": "cd client && npm install",
    "install-server": "npm install",
    "install-all": "npm run install-server && npm run install-client",
    "start": "node server/server.js",
    "seed": "node server/seedDatabase.js",
    "test-server": "node server/test-server.js",
    "heroku-postbuild": "npm run install-client && npm run build"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.39.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "firebase": "^12.2.1",
    "framer-motion": "^12.23.16",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.544.0",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.0",
    "motin": "^0.0.1-security.0",
    "motion": "^12.23.16",
    "multer": "^2.0.2",
    "react-router-dom": "^7.9.1",
    "socket.io": "^4.7.2"
  },
  "devDependencies": {
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "cultural-exchange",
    "heritage",
    "india",
    "sih2024",
    "education",
    "social-platform"
  ],
  "author": "SIH Team",
  "license": "MIT"
}
